  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  <script>
    // Load current settings on page load
    document.addEventListener('DOMContentLoaded', async () => {
      try {
        const response = await axios.get('/admin/attendance-settings-data');
        const settings = response.data;
        
        // Populate form with current settings
        document.getElementById('studentWorkStartHour').value = settings.studentWorkStartHour;
        document.getElementById('studentWorkStartMinute').value = settings.studentWorkStartMinute;
        document.getElementById('studentLateHour').value = settings.studentLateThresholdHour;
        document.getElementById('studentLateMinute').value = settings.studentLateThresholdMinute;
        document.getElementById('studentCheckOutHour').value = settings.studentCheckOutThresholdHour;
        document.getElementById('studentCheckOutMinute').value = settings.studentCheckOutThresholdMinute;
        
        document.getElementById('employeeWorkStartHour').value = settings.employeeWorkStartHour;
        document.getElementById('employeeWorkStartMinute').value = settings.employeeWorkStartMinute;
        document.getElementById('employeeLateHour').value = settings.employeeLateThresholdHour;
        document.getElementById('employeeLateMinute').value = settings.employeeLateThresholdMinute;
        document.getElementById('employeeCheckOutHour').value = settings.employeeCheckOutThresholdHour;
        document.getElementById('employeeCheckOutMinute').value = settings.employeeCheckOutThresholdMinute;
        
        // Populate absence marking delay
        document.getElementById('absenceMarkingDelay').value = settings.absenceMarkingDelayMinutes || 1;
        
        // Update schedule info display
        updateScheduleInfo();
      } catch (error) {
        console.error('Error loading settings:', error);
        showAlert('error', 'حدث خطأ في تحميل الإعدادات');
      }
    });

    // Update schedule info display for both students and employees
    function updateScheduleInfo() {
      const delayMinutes = parseInt(document.getElementById('absenceMarkingDelay').value) || 1;
      
      // ========== STUDENT SCHEDULE ==========
      const studentCheckoutHour = parseInt(document.getElementById('studentCheckOutHour').value) || 0;
      const studentCheckoutMinute = parseInt(document.getElementById('studentCheckOutMinute').value) || 0;
      
      let studentScheduledMinutes = studentCheckoutHour * 60 + studentCheckoutMinute + delayMinutes;
      if (studentScheduledMinutes >= 24 * 60) {
        studentScheduledMinutes = studentScheduledMinutes - (24 * 60);
      }
      
      const studentHour = Math.floor(studentScheduledMinutes / 60);
      const studentMin = studentScheduledMinutes % 60;
      
      const studentPeriod = studentHour >= 12 ? 'PM' : 'AM';
      const studentDisplayHour = studentHour === 0 ? 12 : (studentHour > 12 ? studentHour - 12 : studentHour);
      
      document.getElementById('scheduleInfo').innerHTML = 
        `سيتم تسجيل الغياب التلقائي يومياً الساعة <strong>${studentDisplayHour}:${studentMin.toString().padStart(2, '0')} ${studentPeriod}</strong>`;
      
      // ========== EMPLOYEE SCHEDULE ==========
      const employeeCheckoutHour = parseInt(document.getElementById('employeeCheckOutHour').value) || 0;
      const employeeCheckoutMinute = parseInt(document.getElementById('employeeCheckOutMinute').value) || 0;
      
      let employeeScheduledMinutes = employeeCheckoutHour * 60 + employeeCheckoutMinute + delayMinutes;
      if (employeeScheduledMinutes >= 24 * 60) {
        employeeScheduledMinutes = employeeScheduledMinutes - (24 * 60);
      }
      
      const employeeHour = Math.floor(employeeScheduledMinutes / 60);
      const employeeMin = employeeScheduledMinutes % 60;
      
      const employeePeriod = employeeHour >= 12 ? 'PM' : 'AM';
      const employeeDisplayHour = employeeHour === 0 ? 12 : (employeeHour > 12 ? employeeHour - 12 : employeeHour);
      
      document.getElementById('employeeScheduleInfo').innerHTML = 
        `سيتم تسجيل الغياب التلقائي يومياً الساعة <strong>${employeeDisplayHour}:${employeeMin.toString().padStart(2, '0')} ${employeePeriod}</strong>`;
    }

    // Update schedule info when inputs change
    document.getElementById('studentCheckOutHour').addEventListener('change', updateScheduleInfo);
    document.getElementById('studentCheckOutMinute').addEventListener('change', updateScheduleInfo);
    document.getElementById('employeeCheckOutHour').addEventListener('change', updateScheduleInfo);
    document.getElementById('employeeCheckOutMinute').addEventListener('change', updateScheduleInfo);
    document.getElementById('absenceMarkingDelay').addEventListener('input', updateScheduleInfo);

    // Handle form submission
    document.getElementById('settingsForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const settings = {};
      
      // Convert form data to object
      for (let [key, value] of formData.entries()) {
        settings[key] = parseInt(value);
      }
      
      try {
        await axios.post('/admin/attendance-settings', settings);
        showAlert('success', 'تم حفظ الإعدادات بنجاح!');
        
        // Show success notification
        Swal.fire({
          icon: 'success',
          title: 'تم الحفظ!',
          text: 'تم حفظ إعدادات الحضور بنجاح',
          confirmButtonText: 'حسناً',
          confirmButtonColor: '#000',
        });
      } catch (error) {
        console.error('Error saving settings:', error);
        showAlert('error', 'حدث خطأ أثناء حفظ الإعدادات');
        
        Swal.fire({
          icon: 'error',
          title: 'خطأ!',
          text: 'حدث خطأ أثناء حفظ الإعدادات',
          confirmButtonText: 'حسناً',
          confirmButtonColor: '#dc3545',
        });
      }
    });

    // Reset to defaults
    async function resetToDefaults() {
      const result = await Swal.fire({
        icon: 'warning',
        title: 'هل أنت متأكد؟',
        text: 'سيتم إعادة تعيين جميع الإعدادات إلى القيم الافتراضية',
        showCancelButton: true,
        confirmButtonText: 'نعم، إعادة تعيين',
        cancelButtonText: 'إلغاء',
        confirmButtonColor: '#dc3545',
        cancelButtonColor: '#6c757d',
      });
      
      if (result.isConfirmed) {
        try {
          await axios.post('/admin/attendance-settings/reset');
          
          // Reload page to show default values
          Swal.fire({
            icon: 'success',
            title: 'تم!',
            text: 'تم إعادة تعيين الإعدادات إلى القيم الافتراضية',
            confirmButtonText: 'حسناً',
            confirmButtonColor: '#000',
          }).then(() => {
            window.location.reload();
          });
        } catch (error) {
          console.error('Error resetting settings:', error);
          Swal.fire({
            icon: 'error',
            title: 'خطأ!',
            text: 'حدث خطأ أثناء إعادة تعيين الإعدادات',
            confirmButtonText: 'حسناً',
            confirmButtonColor: '#dc3545',
          });
        }
      }
    }

    // Show alert message
    function showAlert(type, message) {
      const alertId = type === 'success' ? 'successAlert' : 'errorAlert';
      const messageId = type === 'success' ? 'successMessage' : 'errorMessage';
      
      document.getElementById(messageId).textContent = message;
      document.getElementById(alertId).style.display = 'flex';
      
      // Hide after 5 seconds
      setTimeout(() => {
        document.getElementById(alertId).style.display = 'none';
      }, 5000);
    }
  </script>
