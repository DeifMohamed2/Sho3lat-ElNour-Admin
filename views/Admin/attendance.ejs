<!DOCTYPE html>
<html lang="ar" dir="rtl">

<%- include("./partials/head.ejs") %>

<style>
.status-btn {
  min-width: 80px;
  padding: 5px 10px;
  margin: 0 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.status-btn.active {
  transform: scale(1.1);
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.status-present {
  background-color: #28a745;
  color: white;
  border: 2px solid transparent;
}

.status-present.active {
  border-color: #155724;
}

.status-absent {
  background-color: #dc3545;
  color: white;
  border: 2px solid transparent;
}

.status-absent.active {
  border-color: #721c24;
}

.status-late {
  background-color: #ffc107;
  color: #000;
  border: 2px solid transparent;
}

.status-late.active {
  border-color: #856404;
}

.student-row {
  transition: background-color 0.3s ease;
}

.student-row:hover {
  background-color: #f8f9fa;
}

.table-responsive {
  max-height: 600px;
  overflow-y: auto;
}

.table-responsive table thead {
  position: sticky;
  top: 0;
  z-index: 10;
  background: #f8f9fa;
}

.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
}

.stats-card h3 {
  font-size: 2.5rem;
  font-weight: bold;
  margin: 10px 0;
}

.stats-card p {
  font-size: 1rem;
  opacity: 0.9;
}
</style>

<body class="g-sidenav-show rtl bg-gray-100">
    <%- include("./partials/aside.ejs") %>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
      <%- include("./partials/nav.ejs") %>

      <div class="container-fluid py-2">
        <div class="row">
          <div class="col-12">
            <div class="card mt-4">
              <div class="card-header pb-0 p-3">
                <h5 class="mb-0">إدارة الحضور اليومي</h5>
              </div>
              <div class="card-body p-3">
                <!-- Filters -->
                <div class="row mb-4">
                  <div class="col-md-3">
                    <label for="attendanceDate" class="form-label">التاريخ</label>
                    <input type="date" class="form-control border border-2" id="attendanceDate" required>
                  </div>
                  <div class="col-md-3">
                    <label for="classId" class="form-label">الفصل</label>
                    <select class="form-select border border-2" id="classId" required>
                      <option value="">اختر الفصل</option>
                      <% if (allClasses && allClasses.length > 0) { %>
                        <% allClasses.forEach(cls => { %>
                          <option value="<%= cls._id %>"><%= cls.academicLevel %> - <%= cls.section %></option>
                        <% }) %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-3 d-flex align-items-end">
                    <button type="button" class="btn bg-gradient-primary" id="loadStudentsBtn">
                      <i class="material-symbols-rounded">search</i> تحميل الطلاب
                    </button>
                  </div>
                  <div class="col-md-3 d-flex align-items-end">
                    <button type="button" class="btn bg-gradient-success" id="saveAttendanceBtn" disabled>
                      <i class="material-symbols-rounded">save</i> حفظ الحضور
                    </button>
                  </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4" id="statsContainer" style="display: none;">
                  <div class="col-md-3">
                    <div class="card text-center">
                      <div class="card-body">
                        <h6 class="text-uppercase text-muted">إجمالي الطلاب</h6>
                        <h3 id="totalStudents">0</h3>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="card text-center bg-success text-white">
                      <div class="card-body">
                        <h6 class="text-uppercase">حاضر</h6>
                        <h3 id="presentCount">0</h3>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="card text-center bg-danger text-white">
                      <div class="card-body">
                        <h6 class="text-uppercase">غائب</h6>
                        <h3 id="absentCount">0</h3>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="card text-center bg-warning">
                      <div class="card-body">
                        <h6 class="text-uppercase">متأخر</h6>
                        <h3 id="lateCount">0</h3>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-3" id="quickActions" style="display: none;">
                  <div class="col-12">
                    <div class="btn-group" role="group">
                      <button type="button" class="btn btn-outline-success" id="markAllPresent">
                        <i class="material-symbols-rounded">done_all</i> تحديد الكل حاضر
                      </button>
                      <button type="button" class="btn btn-outline-danger" id="markAllAbsent">
                        <i class="material-symbols-rounded">block</i> تحديد الكل غائب
                      </button>
                      <button type="button" class="btn btn-outline-secondary" id="clearAll">
                        <i class="material-symbols-rounded">clear</i> مسح التحديد
                      </button>
                    </div>
                  </div>
                </div>

                <!-- Students Table -->
                <div class="table-responsive" id="studentsTableContainer" style="display: none;">
                  <table class="table align-items-center mb-0" id="studentsTable">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">كود الطالب</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">اسم الطالب</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">رقم الهاتف</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 text-center">الحالة</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ملاحظات</th>
                      </tr>
                    </thead>
                    <tbody id="studentsTableBody">
                      <!-- Students will be loaded here dynamically -->
                    </tbody>
                  </table>
                </div>

                <!-- No Data Message -->
                <div class="alert alert-info text-center" id="noDataMessage">
                  اختر التاريخ والفصل لعرض قائمة الطلاب
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="/js/adminJS/attendance.js"></script>
</body>
</html>
