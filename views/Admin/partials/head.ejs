  <style>
    /* Global Table Styles - Max Height with Scroll for all Admin tables */
    .table-responsive:not([style*="max-height"]) {
      max-height: 600px;
      overflow-y: auto;
    }
    
    /* Sticky header for scrollable tables */
    .table-responsive table thead {
      position: sticky;
      top: 0;
      z-index: 10;
      background: #f8f9fa;
    }
    
    /* Ensure table headers have background when sticky */
    .table-responsive table thead th {
      background: #f8f9fa;
    }
    
    /* Smooth scrolling */
    .table-responsive {
      scroll-behavior: smooth;
    }
    
    /* Custom scrollbar styling */
    .table-responsive::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    
    .table-responsive::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 4px;
    }
    
    .table-responsive::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 4px;
    }
    
    .table-responsive::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
  </style>
